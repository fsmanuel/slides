
<h2>{{t (t-route "posts.index" "headline")}}</h2>

<div class="o-layout">
  <div class="o-layout__item  u-2/3">

    <div class="o-layout u-margin-bottom">
      <div class="o-layout__item  u-1/2">
        <PowerSelect
          @options={{this.stateOptions}}
          @selected={{this.stateOption}}
          @onChange={{this.changeState}}
          as |option|
        >
          {{option.label}}
        </PowerSelect>
      </div>

      <div class="o-layout__item u-1/2">
        <LinkTo @route="posts.new">
          {{t "routes.posts.index.new-record"}}
        </LinkTo>
      </div>
    </div>

    {{!-- The table --}}
    <Table
      @modelName="post"
      @columns={{this.tableColumns}}
      @records={{@model}}
      @recordActions={{hash
        delete=(fn this.deleteRecord)
      }}
      @rowClicked={{this.rowClicked}}
    />
    
  </div>
  
  <div class="o-layout__item  u-1/3">
     {{outlet}}
  </div>
</div>
